# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Required: Your MongoDB connection string
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
# For Local MongoDB: mongodb://localhost:27017/sales_crm
MONGODB_URI=your_mongodb_connection_string_here

# JWT Configuration
# Required: A secret key for signing JWT tokens (use a strong random string in production)
JWT_SECRET=your_jwt_secret_key_here
# Optional: Token expiration time (defaults to 7d if not set)
JWT_EXPIRE=7d

# Frontend URL (for CORS)
# Required: The URL where your frontend will run
CLIENT_URL=http://localhost:3000

